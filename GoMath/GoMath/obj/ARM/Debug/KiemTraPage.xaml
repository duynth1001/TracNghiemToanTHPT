<Page x:ConnectionId='1'
    x:Class="GoMath.KiemTraPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoMath"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Kiemtrabackground.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" Height="500" Width="450" Orientation="Vertical" VerticalAlignment="Top" Margin="397,2,433,0">
            <ComboBox x:ConnectionId='2'  Name="numberOfQuestionComboBox" PlaceholderText="50" Width="300" Height="100"                                      HorizontalAlignment="Left"  Header="Số câu hỏi kiểm tra" FontSize="20"  />
            <TextBlock  Height="50" HorizontalAlignment="Left" Width="250" Text="Thời gian làm bài " FontSize="20" />
            <StackPanel Orientation="Horizontal" Height="100" HorizontalAlignment="Left">
                <ComboBox x:ConnectionId='3' Name="TimeToTest_Hour"                                          PlaceholderText="0" Width="100" Height="70"   FontSize="20" FontFamily="Arial Black"  />
                <TextBlock Text="Giờ" FontSize="20" Height="50" Width="50"  />
                <ComboBox x:ConnectionId='4' Name="TimeToTest_Minute" PlaceholderText="0" Width="100" Height="70"                                              FontSize="20"  FontFamily="Arial Black" />
                <TextBlock  Text="Phút" FontSize="20" Height="50"  Width="50"/>
            </StackPanel>
            <TextBlock   Height="40" HorizontalAlignment="Left" Width="250" Text="Chọn chủ đề" FontSize="20" />
            <CheckBox  Content="Khảo sát hàm số" FontSize="20" FontFamily="Comic Sans MS"   ></CheckBox>
            <CheckBox Content="Lũy thừa,logarit " FontSize="20" FontFamily="Comic Sans MS"  Margin="0,10,0,0" >
            </CheckBox>
            <CheckBox Content="Nguyên hàm,tích phân"  FontSize="20" FontFamily="Comic Sans MS" Margin="0,10,0,0"/>
            <CheckBox Content="Số phức" FontSize="20"  FontFamily="Comic Sans MS " Margin="0,10,0,0"></CheckBox>
            <CheckBox Content="Thể tích" FontSize="20"  Margin="0,10,0,0" FontFamily="Comic Sans MS" ></CheckBox>
        </StackPanel>
        <Button Width="500" FontSize="50" Content="Làm bài" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,0,0,100"></Button>
        <!--TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" x:Name="txt"/>
        <Button Grid.Row="1" Content="start" Click="Button_Click" x:Name="button"/>-->
    </Grid>
</Page>

